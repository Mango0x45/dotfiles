#!/bin/sh

case "${LC_ALL:-$LANG}" in
en_*)
	fmt='%A, %-d of %B %Y — %H:%M %Z'
	pat=', (\d+)'
	;;
sv_*)
	fmt='%A, %-d %B %Y — %H:%M %Z'
	pat=', (\d+)'
esac

while :
do
	# {
	# 	date +'%A, %-d of %B %Y — %T %Z'
	# 	TZ='Asia/Kolkata' date +'(%T %Z)'
	# } | paste -sd ' '
	date +"$fmt" | ordinal -p "$pat"
	sleep 10
	# sleep "$(date +'%s.%N' | dc -e '? d 1 + 1 / r - p')"
done | sed 's/^./\U&/g'
