#!/bin/sh

emacs -Q -nw --eval="
(progn
  (menu-bar-mode -1)

  (setq select-enable-primary t
        help-window-select t)

  (full-calc)
  (keymap-set calc-mode-map \"q\" #'kill-emacs)

  (define-advice calc-full-help (:after nil)
    (switch-to-buffer-other-window \"*Help*\")
    (message \"Press ‘q’ to go back to calc\")))"
